

<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <title>Title</title>

    <link  type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>
<body>
<header>
    <div class="logo ">
        <img class="img-fluid" src="{{ asset('img/logo_google.png') }}" alt="logo" width="850" height="300"></div>
    <nav>
        <ul>
            <li>Lien 1</li>
            <li>Lien 2</li>
            <li>Lien 3</li>
        </ul>
    </nav>
</header>


    <main>

        <div class="search">
            <form action="{{ path('book_search') }}" method="get">
                <label for="word"><strong>Que cherchez vous ? </strong></label>
                <input type="text" name="word" placeholder="Votre recherche">
            <input type="submit">

            </form>
        </div>


        <div class="blocArticles">
            <ul>
            {% for book in books %}
                    <li>
                        <h4><a href="{{ path('book', {'id':book.id}) }}">{{ book.title }}</a></h4>
                        <p>Résumé : {{ book.resume }}</p>

                        <p>Author : {{ book.author }}</p>

                       <p> Nombre de page : {{ book.nbpages }}</p>
                        <p> <a href="{{ path('book_delete', {'id':book.id}) }}">Suprimer le livre</a></p>
                    </li>
            {% endfor %}
            </ul>
        </div>
    </main>

</body>